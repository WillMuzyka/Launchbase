<div class="item">
  <div>Email</div>
  <div class="input">
    <input
      required
      type="email"
      name="email"
      value="{{user.email}}"
      placeholder="Digite seu email"
      onblur = "Validate.apply(this, 'isEmail')"
    >
  </div>
</div>

