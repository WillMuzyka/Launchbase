<div class="item">
  <div>Avatar URL</div>
  <div>
    <input required type="url" name="avatar_url" placeholder="http://" value="{{ instructor.avatar_url }}">
  </div>
</div>

<div class="item">
  <div>Instrutor</div>
  <div>
    <input required type="text" name="name" placeholder="Nome" value="{{ instructor.name }}">
  </div>
</div>

<div class="item">
  <div>Data de Nascimento</div>
  <div>
    <input required type="date" name="birth" value="{{ instructor.birth }}">
  </div>
</div>

<div class="item">
  <div>Gênero</div>
  <div>
    <span>
      <input type="radio" name="gender" value="M" {% if instructor.gender != "F" %} checked {% endif %}>Masculino
    </span>
    <span>
      <input type="radio" name="gender" value="F" {% if instructor.gender == "F" %} checked {% endif %}>Feminino
    </span>
  </div>
</div>

<div class="item">
  <div>Área de Atuação</div>
  <div>
    <input required type="text" name="services" placeholder="Separe os serviços prestados por vírgula" value="{{ instructor.services }}">
  </div>
</div>
<button type="submit">Salvar</button>