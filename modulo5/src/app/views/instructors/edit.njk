{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background: url({{ instructor.avatar_url }}) no-repeat "></section>
    <section class="details">
      <form method="POST" action="/instructors?_method=PUT">
        <h3>Editar Instrutor</h3>

        {% include "./fields.njk" %}

        <input type="hidden" name="id" value="{{ instructor.id }}">
      </form>

      <form id="formDelete" method="POST" action="/instructors?_method=DELETE">
        <input type="hidden" name="id" value="{{ instructor.id }}">
        <button type="Submit">Deletar</button>
      </form>
    </section>
  </div>
  <script src="/scripts/deleteConfirm.js"></script>
{% endblock %}