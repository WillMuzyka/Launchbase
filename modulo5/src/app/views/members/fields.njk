<div class="item">
  <div>Avatar URL</div>
  <div>
    <input required type="url" name="avatar_url" placeholder="http://" value="{{ member.avatar_url }}">
  </div>
</div>

<div class="item">

  <div>Nome</div>
  <div>
    <input required type="text" name="name" placeholder="Nome" value="{{ member.name }}">
  </div>
</div>

<div class="item">
  <div>E-mail</div>
  <div>
    <input required type="email" name="email" placeholder="E-mail do usuário" value="{{ member.email }}">
  </div>
</div>

<div class="item">
  <div>Data de Nascimento</div>
  <div>
    <input required type="date" name="birth" value="{{ member.birth }}">
  </div>
</div>

<div class="item">
  <div>Gênero</div>
  <div>
    <span>
      <input type="radio" name="gender" value="M" {% if member.gender == "M" %} checked="checked" {% endif %}>Masculino
    </span>
    <span>
      <input type="radio" name="gender" value="F" {% if member.gender == "F" %} checked="checked" {% endif %}>Feminino
    </span>
  </div>
</div>

<div class="item">
  <div>Tipo sanguíneo</div>
  <div>
    <select required name="blood">
      <option value="" selected disable hidden>Selecione uma opção</option>
      <option value="O-" {% if member.blood == "O-" %}selected{% endif %}>O-</option>
      <option value="O+" {% if member.blood == "O+" %}selected{% endif %}>O+</option>
      <option value="A-" {% if member.blood == "A-" %}selected{% endif %}>A-</option>
      <option value="A+" {% if member.blood == "A+" %}selected{% endif %}>A+</option>
      <option value="B-" {% if member.blood == "B-" %}selected{% endif %}>B-</option>
      <option value="B+" {% if member.blood == "B+" %}selected{% endif %}>B+</option>
      <option value="AB-" {% if member.blood == "AB-" %}selected{% endif %}>AB-</option>
      <option value="AB+" {% if member.blood == "AB+" %}selected{% endif %}>AB+</option>
    </select>
  </div>
</div>

<div class="item">
  <div>Peso</div>
  <div>
    <input required type="number" name="weight" placeholder="Em kg" value="{{ member.weight }}">
  </div>
</div>

<div class="item">
  <div>Altura</div>
  <div>
    <input required type="number" name="height" placeholder="Em cm" value="{{ member.height }}">
  </div>
</div>
<button type="submit">Salvar</button>