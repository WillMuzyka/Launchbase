{% extends "layout.njk" %}
{% import "parts/card.njk" as cards %}

{% block content %}
  {% call cards.render("Detalhes", "user-dashboard container") %}
    <form method="POST" action="/users?_method=PUT">
      <div class="fields">
        {% include "user/fields.njk" %}
        <input type="hidden" name="id" value="{{ user.id }}">
      </div>

      <button class="button update" type="submit">Atualizar</button>
    </form>

    <form id="formDelete" method="POST" action="/users?_method=DELETE">
      <input type="hidden" name="id" value="{{ user.id }}">
      <button class="button delete" type="Submit">Deletar</button>
    </form>
  {% endcall %}
  <script src="/scripts/deleteConfirm.js"></script>
{% endblock %}