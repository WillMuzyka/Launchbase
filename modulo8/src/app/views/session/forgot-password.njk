{% extends "layout.njk" %}
{% import "parts/card.njk" as cards %}

{% block content %}

  {% call cards.render("Meus An√∫ncios", "password container") %}
    <form method="POST" action="/users/forgot-password">
      <div class="fields">
        <div class="item">
          <div>Email</div>
          <div class="input">
            <input
              required
              type="email"
              name="email"
              value="{{user.email}}"
              placeholder="Digite o e-mail cadastrado"
              onblur = "Validate.apply(this, 'isEmail')"
            >
          </div>
        </div>
      </div>
      
      <button class="button" type="submit">Recuperar senha</button>
    </form>
  {% endcall %}
{% endblock %}