{% extends "layout.njk" %}
{% import "parts/card.njk" as cards %}

{% block content %}
  {% call cards.render("", "product-single container") %}
    <div class="gallery">
      <div class="highlight">
        {% if not product.img %}
          <img src="http://placehold.it/500x500?text=PRODUTO SEM FOTO">
        {% else %}
          <img
            src="{{ product.img }}"
            alt="{{ product.files[0].name }}"
            onclick="Lightbox.open()"
          >
        {% endif %}

        <div class="lightbox-target">
          <img src="{{ product.img }}" alt="{{ product.files[0].name }}">
          <a
            href="#"
            class="lightbox-close"
            onclick="Lightbox.close()"
          >
            <i class="material-icons">close</i>
          </a>
        </div>
      </div>
      
      <div class="gallery-preview">
        {% for image in product.files %}
          <img
            src="{{ image.src }}"
            alt=" {{ image.name }}"
            {% if loop.index0 == 0 %}
            class="active"
            {% endif %}
            onclick = "ImageGallery.setImage(event)"
          >
        {% endfor %}
      </div>
    </div>

    <div class="info">
      <h1>{{ product.name }}</h1>

      <div class="published">
        Publicado em: {{ product.published }}
      </div>
    
      <div class="description">
        {{ product.description }}
      </div>

      <div class="price-buy">
        <div class="price">
          {{ product.formattedPrice }}
          {% if product.price < product.old_price %}
          <span class="old_price">{{ product.formattedOldPrice }}</span>
          {% endif %}
        </div>

        {% if not (product.user_id == session.userId) %}
          <div class="buy">
          {% if product.status == 0 %}
            <p class="unavailable">Indispon√≠vel</p>
          {% elseif product.quantity == 0 %}
            <p class="unavailable">Fora de estoque</p>
          {% else %}
          <form action="/users/orders" method="post">
            <input type="hidden" name="id" value={{ product.id }}>
            <button class="button">Comprar</button>
          </form>
          {% endif %}
        {% endif %}
        </div>
      </div>

    </div>
  
  {% endcall %}
{% endblock %}