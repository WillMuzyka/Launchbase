{% extends "layout.njk" %}

{% block videos_css %}

  <link rel="stylesheet" href="/videos.css">
  <title>Vídeos - Will Muzyka</title>

{% endblock %}

{% block content %}

  <div id="wrapper">
    <h1>Vídeos</h1>
    <p>Vídeos aleatórios selecionados</p>
  </div>

  <section class="cards">
    {% for item in items %}
      <div class="card" id="{{item.id}}">
        <div class="card__img-container {{ 'featured-wrapper' if item.featured }}">
          <img src="https://img.youtube.com/vi/{{item.id}}/maxresdefault.jpg" alt="{{item.title}}">
          {% if item.featured %}
            <div class="featured">Destaque</div>
          {% endif %}
        </div>

        <div class="card__content">
          <p>{{item.title}}<br>~
            {{item.author}}</p>
        </div>

        <div class="card__info">
          <p>{{item.duration}}</p>
          <p class="card__price">{{item.price}}</p>
        </div>
      </div>
    {% endfor %}
  </section>

  <div class="modal-overlay">
    <div class="modal">
      <a class="close-modal">
        <i class="material-icons">close</i>
      </a>

      <div class="modal-content">
        <iframe width="560" height="315" src="" frameborder="0" allowfullscreen="allowfullscreen"></iframe>
      </div>
    </div>
  </div>

  <script src="scripts.js"></script>

{% endblock %}