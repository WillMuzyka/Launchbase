{% extends "layout.njk" %}

{% block content %}
  <div class="card">
    <section class="avatar" style="background-image: url(https://source.unsplash.com/collection/517198/800x800)"></section>

    <section class="details">
      <h3>Atualização do Professor</h3>
      <form action="/teachers?_method=PUT" method="POST">
        {% include "./fields.njk" %}
        <input type="hidden" name="id" value="{{ teacher.id }}">
        <button class="edit" type="submit">Salvar</button>
      </form>
      <form action="/teachers?_method=DELETE" method="post">
        <input type="hidden" name="id" value="{{ teacher.id }}">
        <button class="edit" id="delete" type="submit">Deletar</button>
      </form>
    </section>
  </div>
  
{% endblock %}