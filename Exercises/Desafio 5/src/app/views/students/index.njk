{% extends "layout.njk" %}

{% block content %}
  <div class="card table-container">
    <a href="/students/create">Novo Aluno</a>
    <table id="student">
      <thead>
        <tr>
          <th>Nome</th>
          <th>Ano escolar</th>
          <th>E-mail</th>
          <th>Ação</th>
        </tr>
      </thead>
      <tbody>
      {% for student in students %}
        <tr>
          <td>
            <span class="avatar" style="background-image: url({{ student.avatar_url }})"></span>
          {{  student.name  }}</td>
          <td>{{ student.school_year }}</td>
          <td>{{ student.email }}</td>
          <td>
            <a href="/students/{{ student.id }}">Visualizar</a>
          </td>
        </tr>
      {% endfor %}
      </tbody>
    </table>
  </div>

{% endblock %}